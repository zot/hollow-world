#!/bin/bash

# HollowWorld Itch.io Deployment Script
# Automates the complete deployment process as specified in specs/itch-io.md

set -e  # Exit on any error

echo "ğŸ¯ Starting HollowWorld deployment to itch.io..."

# Get current directory
PROJECT_ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
cd "$PROJECT_ROOT"

echo "ğŸ“‹ Project root: $PROJECT_ROOT"

# Function to increment version number
increment_version() {
    if [[ ! -f "VERSION" ]]; then
        echo "0.0.1" > VERSION
        echo "ğŸ“ Created VERSION file with 0.0.1"
        return
    fi

    local current_version=$(cat VERSION)
    echo "ğŸ“ Current version: $current_version"

    # Split version into parts
    local version_parts=(${current_version//./ })
    local major=${version_parts[0]}
    local minor=${version_parts[1]}
    local patch=${version_parts[2]}

    # Increment patch version
    patch=$((patch + 1))

    local new_version="$major.$minor.$patch"
    echo "$new_version" > VERSION
    echo "// This file is auto-generated during build - do not edit manually" > src/version.ts
    echo "export const VERSION = '$new_version';" >> src/version.ts
    echo "ğŸ“ Incremented version to: $new_version"
}

# Function to clean temporary files
clean_temp_files() {
    echo "ğŸ§¹ Cleaning temporary files from dist folder..."
    if [[ -d "dist" ]]; then
        find dist/ -name "*~" -delete 2>/dev/null || true
        find dist/ -name "*.~undo-tree~" -delete 2>/dev/null || true
        find dist/ -name "#*#" -delete 2>/dev/null || true
        find dist/ -name ".#*" -delete 2>/dev/null || true
        echo "âœ… Temporary files cleaned"
    else
        echo "â„¹ï¸  No dist directory found"
    fi
}

# Function to copy missing assets
copy_missing_assets() {
    echo "ğŸ“ Copying missing assets to dist..."

    # Audio files are now automatically copied by Vite from public/assets/audio/ to dist/assets/audio/
    if [[ -d "public/assets/audio" ]] && [[ -n "$(ls public/assets/audio/*.mp3 2>/dev/null)" ]]; then
        echo "âœ… Audio files will be automatically copied by Vite build process"
    else
        echo "âš ï¸  No audio files found in public/assets/audio/"
    fi

    # Copy VERSION file
    if [[ -f "VERSION" ]]; then
        cp VERSION dist/
        echo "âœ… VERSION file copied"
    else
        echo "âš ï¸  VERSION file not found"
    fi
}

# Function to verify required files
verify_required_files() {
    echo "ğŸ” Verifying required files are present..."

    local missing_files=()

    # Check for essential files
    [[ ! -f "dist/index.html" ]] && missing_files+=("dist/index.html")
    [[ ! -d "dist/assets" ]] && missing_files+=("dist/assets/")
    [[ ! -d "dist/templates" ]] && missing_files+=("dist/templates/")
    [[ ! -f "dist/VERSION" ]] && missing_files+=("dist/VERSION")

    if [[ ${#missing_files[@]} -gt 0 ]]; then
        echo "âŒ Missing required files:"
        printf ' - %s\n' "${missing_files[@]}"
        return 1
    fi

    echo "âœ… All required files present"
}

# Function to create zip package
create_zip_package() {
    echo "ğŸ“¦ Creating zip package for itch.io..."

    cd dist

    # Remove old zip if it exists
    [[ -f "../hollowworld-itch.zip" ]] && rm "../hollowworld-itch.zip"

    # Create new zip
    zip -r "../hollowworld-itch.zip" . -q

    cd ..

    local zip_size=$(du -h hollowworld-itch.zip | cut -f1)
    echo "âœ… Created hollowworld-itch.zip ($zip_size)"
}

# Function to test zip extraction
test_zip_extraction() {
    echo "ğŸ§ª Testing zip extraction..."

    # Create temporary test directory
    local test_dir="test-extract-$$"
    mkdir -p "$test_dir"

    # Extract zip
    cd "$test_dir"
    unzip -q "../hollowworld-itch.zip"

    # Verify key files exist
    local test_files=("index.html" "assets" "templates" "VERSION")
    local missing_test_files=()

    for file in "${test_files[@]}"; do
        [[ ! -e "$file" ]] && missing_test_files+=("$file")
    done

    cd ..
    rm -rf "$test_dir"

    if [[ ${#missing_test_files[@]} -gt 0 ]]; then
        echo "âŒ Zip test failed - missing files:"
        printf ' - %s\n' "${missing_test_files[@]}"
        return 1
    fi

    echo "âœ… Zip extraction test passed"
}

# Function to deploy to itch.io
deploy_to_itch() {
    echo "ğŸš€ Deploying to itch.io using butler..."

    # Check if butler is available
    if ! command -v butler &> /dev/null; then
        echo "âŒ Butler not found. Please install butler first:"
        echo "   https://itch.io/docs/butler/"
        return 1
    fi

    # Deploy to itch.io
    butler push hollowworld-itch.zip zotimer/hollow-world:html

    echo "âœ… Deployment completed!"
}

# Function to show final status
show_final_status() {
    local version=$(cat VERSION 2>/dev/null || echo "unknown")
    echo ""
    echo "ğŸ‰ HollowWorld v$version deployed successfully!"
    echo "ğŸŒ Game URL: https://zotimer.itch.io/hollow-world"
    echo "ğŸ“Š Check deployment status: butler status zotimer/hollow-world:html"
}

# Main deployment process
main() {
    echo "ğŸ”§ Step 1: Incrementing version..."
    increment_version

    echo ""
    echo "ğŸ—ï¸  Step 2: Building production bundle..."
    npm run build

    echo ""
    echo "ğŸ§¹ Step 3: Cleaning temporary files..."
    clean_temp_files

    echo ""
    echo "ğŸ“ Step 4: Copying missing assets..."
    copy_missing_assets

    echo ""
    echo "ğŸ” Step 5: Verifying required files..."
    verify_required_files

    echo ""
    echo "ğŸ“¦ Step 6: Creating zip package..."
    create_zip_package

    echo ""
    echo "ğŸ§ª Step 7: Testing zip extraction..."
    test_zip_extraction

    echo ""
    echo "ğŸš€ Step 8: Deploying to itch.io..."
    deploy_to_itch

    echo ""
    show_final_status
}

# Run main deployment process
main "$@"
